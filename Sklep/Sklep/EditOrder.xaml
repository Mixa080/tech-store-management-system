<Window x:Class="Sklep.EditOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="av"
        Title="LoginView" Height="550" Width="556"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="12">
        <Border CornerRadius="10"
                BorderThickness="2"
                Opacity="0.95" Margin="0,10,0,0" Background="#FF131725">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FF43A073" Offset="0.75"/>
                    <GradientStop Color="#FF00FF84" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="74"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock
                    Foreground="DarkGray"
                    FontSize="25"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Run Language="uk-ua" Text="Редагування замовлення"/>
                </TextBlock>

                <Button x:Name="btnEditOrd"
                        BorderThickness="0"
                        Content="Редагувати"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Margin="102,391,102,10" Grid.Row="1" Click="btnEditOrd_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#FF398E4A"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Width="150" Height="40"
                                    CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <ScrollViewer Margin="25,28,21,89" Grid.Row="1" Grid.Column="0">
                    <StackPanel>
                        <TextBlock
                            Foreground="DarkGray"
                            FontSize="12"
                            FontWeight="Medium"
                            FontFamily="Montserrat">
                            <Run Language="uk-ua" Text="Дата Замовлення"/>
                        </TextBlock>
                        <TextBox x:Name="DateofOrder"
                                 FontSize="13"
                                 FontWeight="Medium"
                                 FontFamily="Montserrat"
                                 Foreground="White"
                                 PreviewTextInput="DateofOrder_PreviewTextInput"
                                 CaretBrush="LightGray"
                                 BorderBrush="DarkGray"
                                 BorderThickness="0,0,0,2"
                                 Height="28"
                                 VerticalContentAlignment="Center"
                                 Margin=" 0,5,0,0"
                                 Padding="20,0,0,0">
                            <TextBox.Background>
                                <ImageBrush 
                                   Stretch="None"
                                   AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                        <TextBlock
                            Foreground="DarkGray"
                            FontSize="12"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0,35,0,0">
                            <Run Language="uk-ua" Text="Загальна Вартість"/>
                        </TextBlock>
                        <TextBox x:Name="TotalCost"
    FontSize="13"
    FontWeight="Medium"
    FontFamily="Montserrat"
    Foreground="White"
    CaretBrush="LightGray"
    BorderBrush="DarkGray"
    BorderThickness="0,0,0,2"
    Height="28"
    VerticalContentAlignment="Center"
    Margin="0,5,0,0"
    Padding="20,0,0,0">
                            <TextBox.Background>
                                <ImageBrush Stretch="None" AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                        <TextBlock
                            Foreground="DarkGray"
                            FontSize="12"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0,35,0,0">
                            <Run Language="uk-ua" Text="Ім'я Клієнта"/>
                        </TextBlock>
                        <TextBox x:Name="Clientname"
    FontSize="13"
    FontWeight="Medium"
    FontFamily="Montserrat"
    Foreground="White"
    CaretBrush="LightGray"
    BorderBrush="DarkGray"
    BorderThickness="0,0,0,2"
    Height="28"
    VerticalContentAlignment="Center"
    Margin="0,5,0,0"
    Padding="20,0,0,0">
                            <TextBox.Background>
                                <ImageBrush Stretch="None" AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>


                        <TextBlock
                            Foreground="DarkGray"
                            FontSize="12"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0,35,0,0">
                            <Run Language="uk-ua" Text="Кількість"/>
                        </TextBlock>
                        <TextBox x:Name="Amount"
    FontSize="13"
    FontWeight="Medium"
    FontFamily="Montserrat"
    Foreground="White"
    CaretBrush="LightGray"
    BorderBrush="DarkGray"
    BorderThickness="0,0,0,2"
    Height="28"
    VerticalContentAlignment="Center"
    Margin="0,5,0,0"
    Padding="20,0,0,0">
                            <TextBox.Background>
                                <ImageBrush Stretch="None" AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                        <TextBlock
                            Foreground="DarkGray"
                            FontSize="12"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0,35,0,0">
                            <Run Language="uk-ua" Text="Ціна Продажу"/>
                        </TextBlock>
                        <TextBox x:Name="Sellingprice"
    FontSize="13"
    FontWeight="Medium"
    FontFamily="Montserrat"
    Foreground="White"
    CaretBrush="LightGray"
    BorderBrush="DarkGray"
    BorderThickness="0,0,0,2"
    Height="28"
    VerticalContentAlignment="Center"
    Margin="0,5,0,0"
    Padding="20,0,0,0">
                            <TextBox.Background>
                                <ImageBrush Stretch="None" AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                    </StackPanel>
                </ScrollViewer>

                <Button x:Name="btnClose141" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose1_Click" Tag="IsCloseButton" Margin="517,10,10,39" Width="NaN"/>
            </Grid>
        </Border>
    </Border>
</Window>
